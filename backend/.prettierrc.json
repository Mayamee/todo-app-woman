{
  "trailingComma": "es5",
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 100,
  "semi": false,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "useTabs": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
